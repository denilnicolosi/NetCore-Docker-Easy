@model Film

@{
    ViewData["Title"] = "Modify a Movie";
}

<div class="row m-4">
    <div class="column">
        <h1 class="text-dark">Modify a Movie</h1>
    </div>
</div>

<div class="row m-4">
    <div class="row m-2">
        <div class="column col-3">
            <a class="btn btn-outline-info" asp-action="Index">Show all Movies</a>
        </div>
    </div>

    <div class="row m-2">
        <div class="column col-4">
            <form enctype="application/x-www-form-urlencoded" method="post">
                <div class="form-group m-2">
                    <label for="No">No.</label>
                    <input class="form-control" type="text" asp-for="No" id="No" readonly/>
                </div>
                <div class="form-group m-2">
                    <label for="MovieName">Movie Name</label>
                    <input class="form-control" type="text" asp-for="MovieName" id="MovieName"/>
                </div>
                <div class="form-group m-2">
                    <label for="ReleaseYear">Release Year</label>
                    <input class="form-control" type="number" asp-for="ReleaseYear" id="ReleaseYear"/>
                </div>
                <div class="row m-2">
                    <button class="btn btn-secondary" type="submit">Modify</button>
                </div>
            </form>
        </div>
    </div>
</div>