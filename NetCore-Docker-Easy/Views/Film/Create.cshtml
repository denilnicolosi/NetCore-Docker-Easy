@model Film

@{
    ViewData["Title"] = "Add a New Movie";
}

<div class="row m-4">
    <div class="column">
        <h1 class="text-dark">Add a New Movie</h1>
    </div>
</div>

<div class="row m-4">
    <div class="row m-2">
        <div class="column col-3">
            <a class="btn btn-outline-info" asp-action="Index">Show all Movies</a>
        </div>
    </div>

    <div class="row m-2">
        <div class="column col-4">
            <form enctype="application/x-www-form-urlencoded" method="post">
                <div class="form-group m-2">
                    <label for="movieName">Movie Name</label>
                    <input type="text" class="form-control" id="movieName" asp-for="MovieName" placeholder="Star Wars: Episode IV - A New Hope">
                </div>
                <div class="form-group m-2">
                    <label for="movieYear">Release Year</label>
                    <input type="number" class="form-control" id="movieYear" asp-for="ReleaseYear" placeholder="1977">
                </div>
                <div class="row m-2">
                    <input type="submit" class="btn btn-secondary" value="Add New" />
                </div>
            </form>
        </div>
    </div>
    
    <div class="row">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
</div>